    "### 2.2 Basic Image Transformations\n",
    "\n",
    "Now let's implement some basic image transformations:"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "def resize_image(image, width, height):\n",
    "    \"\"\"\n",
    "    Resize an image to the specified dimensions.\n",
    "    \n",
    "    Args:\n",
    "        image (PIL.Image): Image to resize\n",
    "        width (int): Target width in pixels\n",
    "        height (int): Target height in pixels\n",
    "        \n",
    "    Returns:\n",
    "        PIL.Image: Resized image\n",
    "    \"\"\"\n",
    "    return image.resize((width, height), Image.LANCZOS)\n",
    "\n",
    "def crop_image(image, left, top, right, bottom):\n",
    "    \"\"\"\n",
    "    Crop an image to the specified region.\n",
    "    \n",
    "    Args:\n",
    "        image (PIL.Image): Image to crop\n",
    "        left (int): Left coordinate\n",
    "        top (int): Top coordinate\n",
    "        right (int): Right coordinate\n",
    "        bottom (int): Bottom coordinate\n",
    "        \n",
    "    Returns:\n",
    "        PIL.Image: Cropped image\n",
    "    \"\"\"\n",
    "    return image.crop((left, top, right, bottom))\n",
    "\n",
    "def rotate_image(image, angle):\n",
    "    \"\"\"\n",
    "    Rotate an image by the specified angle.\n",
    "    \n",
    "    Args:\n",
    "        image (PIL.Image): Image to rotate\n",
    "        angle (float): Rotation angle in degrees\n",
    "        \n",
    "    Returns:\n",
    "        PIL.Image: Rotated image\n",
    "    \"\"\"\n",
    "    return image.rotate(angle, expand=True)\n",
    "\n",
    "# Test the transformations\n",
    "koi_image = load_image('fish_image_processor/images/input/koi.jpg')\n",
    "\n",
    "if koi_image:\n",
    "    # Resize the image\n",
    "    resized_koi = resize_image(koi_image, 150, 100)\n",
    "    \n",
    "    # Crop the image (center crop)\n",
    "    width, height = koi_image.size\n",
    "    crop_size = min(width, height) // 2\n",
    "    left = (width - crop_size) // 2\n",
    "    top = (height - crop_size) // 2\n",
    "    right = left + crop_size\n",
    "    bottom = top + crop_size\n",
    "    cropped_koi = crop_image(koi_image, left, top, right, bottom)\n",
    "    \n",
    "    # Rotate the image\n",
    "    rotated_koi = rotate_image(koi_image, 45)\n",
    "    \n",
    "    # Display the results\n",
    "    fig, axes = plt.subplots(1, 4, figsize=(20, 5))\n",
    "    \n",
    "    axes[0].imshow(np.array(koi_image))\n",
    "    axes[0].set_title('Original')\n",
    "    axes[0].axis('off')\n",
    "    \n",
    "    axes[1].imshow(np.array(resized_koi))\n",
    "    axes[1].set_title('Resized')\n",
    "    axes[1].axis('off')\n",
    "    \n",
    "    axes[2].imshow(np.array(cropped_koi))\n",
    "    axes[2].set_title('Cropped')\n",
    "    axes[2].axis('off')\n",
    "    \n",
    "    axes[3].imshow(np.array(rotated_koi))\n",
    "    axes[3].set_title('Rotated 45Â°')\n",
    "    axes[3].axis('off')\n",
    "    \n",
    "    plt.tight_layout()\n",
    "    plt.show()\n",
    "    \n",
    "    # Save the transformed images\n",
    "    save_image(resized_koi, 'fish_image_processor/images/output/koi_resized.jpg')\n",
    "    save_image(cropped_koi, 'fish_image_processor/images/output/koi_cropped.jpg')\n",
    "    save_image(rotated_koi, 'fish_image_processor/images/output/koi_rotated.jpg')"
